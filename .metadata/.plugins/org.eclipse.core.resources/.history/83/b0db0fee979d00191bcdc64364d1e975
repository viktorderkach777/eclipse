class Line{
    
	public String exp;
	public int val;
	public String answer;
	//public boolean IsRight;
	
	Line(String _exp, int _val){
		exp = _exp;
		val = _val;
	} 
	
	Line(String _exp, int _val, String _answer){
		exp = _exp;
		val = _val;
		answer = _answer;		
	} 
}

